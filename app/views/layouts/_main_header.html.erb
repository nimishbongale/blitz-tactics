<header class="main-header">
  <div class="container">
    <a href="/" class="logo">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
        <path fill="currentColor" d="M296 160H180.6l42.6-129.8C227.2 15 215.7 0 200 0H56C44 0 33.8 8.9 32.2 20.8l-32 240C-1.7 275.2 9.5 288 24 288h118.7L96.6 482.5c-3.6 15.2 8 29.5 23.3 29.5 8.4 0 16.4-4.4 20.8-12l176-304c9.3-15.9-2.2-36-20.7-36z" class=""></path>
      </svg>
      <span class="large">B</span>litz <span class="large">T</span>actics
    </a>

    <% if sound_enabled? %>
      <a href="javascript:" class="volume-toggle link-right" data-enabled="true">
        <svg class="volume"><use xlink:href="#volume-on"/></svg>
      </a>
    <% else %>
      <a href="javascript:" class="volume-toggle link-right" data-enabled="false">
        <svg class="volume"><use xlink:href="#volume-off"/></svg>
      </a>
    <% end %>

    <a href="/scoreboard" class="link-right">Scoreboard</a>
    <a href="/about" class="link-right">About</a>

    <% if user_signed_in? %>
      <a href="/<%= current_user.username %>" class="link-right user-link">
        <%= current_user.username %>
      </a>
    <% else %>
      <a href="<%= https_registration_url %>" class="link-right user-link sign-in">
        <svg><use xlink:href="#sign-in"/></svg>
        <span>Sign up</span>
      </a>
    <% end %>

    <% if false %>
      <a href="javascript:" class="link-right icon"><%= fa_icon "clock-o" %></a>
      <a href="javascript:" class="link-right icon"><%= fa_icon "volume-down" %></a>
    <% end %>
  </div>
</header>
